<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEBD7"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/views_layout"
        android:gravity="center">

        <ImageView
            android:id="@+id/app_logo"
            android:src="@drawable/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/views_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/edit_text_layout"
            android:elevation="2dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_centerInParent="true"
            android:id="@+id/views_layout_inner">

            <EditText
                android:id="@+id/firstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:hint="  First Name"
                android:textStyle="italic"
                android:textSize="15sp"
                android:inputType="text" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:hint=" Last Name"
                android:textSize="15sp"
                android:inputType="text" />

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="#FF4081"
                android:layout_marginTop="15dp"
                android:hint="  E-mail"
                android:textStyle="italic"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawableTint="#FF4081"
                android:layout_marginTop="15dp"
                android:textStyle="italic"
                android:hint=" Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:drawableLeft="@drawable/birthday"
                android:drawableTint="#FF4081"
                android:layout_marginTop="15dp"
                android:textStyle="italic"
                android:hint=" DOB"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:text="Gender"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="italic"
                    android:text="Sign Up As"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">


                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:entries="@array/gender"
                    android:textAlignment="center"
                    android:background="@drawable/spinner_border"
                    android:layout_gravity="left">
                </Spinner>


                <Spinner
                    android:id="@+id/user_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_border"
                    android:entries="@array/type">

                </Spinner>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"/>


        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/registerButton"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>