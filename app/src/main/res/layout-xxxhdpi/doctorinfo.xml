<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="@dimen/tableMargin"
    android:background="@drawable/border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/tableMargin"
        android:paddingLeft="@dimen/tableMargin"
        android:paddingRight="@dimen/tableMargin"
        android:paddingTop="@dimen/tableMargin"
        android:layout_marginTop="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/docImage"
            android:layout_width="@dimen/custom_tab_layout_height"
            android:layout_height="@dimen/custom_tab_layout_height"
            android:elevation="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/tableMargin"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/docCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tab_label"
                android:text="@string/app_name"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginTop="-3dp" />

            <TextView
                android:id="@+id/docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_horizontal_margin"
                android:text="@string/app_name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/docCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/docAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tableMargin"
                android:text="@string/app_name"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>