<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frag_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEBD7"
    android:padding="@dimen/activity_horizontal_margin">


    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/views_layout"
        android:gravity="center">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/qualificationMessege"
            android:textSize="15sp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/views_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_layout"
        android:elevation="2dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/degreeTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="  DegreeTitle"
                android:textStyle="italic"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp"
                android:inputType="text" />

            <EditText
                android:id="@+id/degreeInstitue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:hint=" Institute Name"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp"
                android:inputType="text" />
            <EditText
                android:id="@+id/degreeYear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:hint=" Completion Year"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp"
                android:inputType="text" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/tabMargin"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/addDegree"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qualificationbutton"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />
        <Button
            android:id="@+id/donedegree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/qualificationbutton"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />
</LinearLayout>
</RelativeLayout>