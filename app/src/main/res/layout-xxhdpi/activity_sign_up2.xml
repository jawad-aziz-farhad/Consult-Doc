<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEBD7"
    android:padding="@dimen/activity_horizontal_margin">


    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/views_layout"
        android:gravity="center">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/signupRequirement"
            android:textSize="15sp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/views_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_layout"
        android:elevation="2dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <Spinner
                android:id="@+id/category"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_toc"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:textAlignment="inherit"
                android:textStyle="italic"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/experience"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mode_edit"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:hint=" Experience"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp"
                android:inputType="text" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_contacts"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp"
                android:hint=" Contact#(+9203315428879)"
                android:inputType="text" />

            <EditText
                android:id="@+id/streetAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:background="@drawable/edit_text_border"
                android:textSize="14sp"
                android:hint=" St.Address(Where Patient can visit)"
                android:inputType="text" />

            <EditText
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp"
                android:hint=" City"
                android:inputType="text" />


            <EditText
                android:id="@+id/country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place"
                android:drawableTint="@color/iconeColor"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:background="@drawable/edit_text_border"
                android:textSize="15sp"
                android:hint=" Country"
                android:inputType="text" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/nextSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/registerButton"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>